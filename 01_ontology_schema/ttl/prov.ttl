@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sam:  <http://semantic.building/sam#> .
@prefix stride: <http://semantic.building/stride#> .

################################################################################
# PROV-O Minimal Subset for STRIDE / SAM
# Author: Chien-Pu Huang
# Purpose:
#   Provide provenance alignment for semantic event → workflow → action chain.
#   STRIDE runtime uses Neo4j PG; this TTL exists for documentation and alignment.
################################################################################


###########################
# Core PROV Classes
###########################

prov:Entity a rdfs:Class ;
    rdfs:label "PROV Entity" ;
    rdfs:comment "A physical, digital, conceptual, or other kind of thing with some fixed aspects." .

prov:Activity a rdfs:Class ;
    rdfs:label "PROV Activity" ;
    rdfs:comment "Something that occurs over a period of time and acts upon or with entities." .

prov:Agent a rdfs:Class ;
    rdfs:label "PROV Agent" ;
    rdfs:comment "Something that bears some responsibility for an activity taking place." .


###########################
# Core PROV Properties
###########################

prov:wasGeneratedBy a rdfs:Property ;
    rdfs:label "was generated by" ;
    rdfs:domain prov:Entity ;
    rdfs:range  prov:Activity ;
    rdfs:comment "Entity was generated by an Activity." .

prov:wasAttributedTo a rdfs:Property ;
    rdfs:label "was attributed to" ;
    rdfs:domain prov:Entity ;
    rdfs:range  prov:Agent ;
    rdfs:comment "Entity was attributed to an Agent." .

prov:wasAssociatedWith a rdfs:Property ;
    rdfs:label "was associated with" ;
    rdfs:domain prov:Activity ;
    rdfs:range  prov:Agent ;
    rdfs:comment "Activity was associated with an Agent." .

prov:used a rdfs:Property ;
    rdfs:label "used" ;
    rdfs:domain prov:Activity ;
    rdfs:range  prov:Entity ;
    rdfs:comment "Activity used an Entity." .


###########################
# STRIDE / SAM Alignment
###########################

# Anomaly = Entity
sam:Anomaly rdfs:subClassOf prov:Entity .

# PerformanceData = Entity
sam:PerformanceData rdfs:subClassOf prov:Entity .

# MaintenanceTask = Activity
sam:MaintenanceTask rdfs:subClassOf prov:Activity .

# WorkflowRun = Activity
stride:WorkflowRun rdfs:subClassOf prov:Activity .

# Actor = Agent
sam:Actor rdfs:subClassOf prov:Agent .

# Organization = Agent
sam:Organization rdfs:subClassOf prov:Agent .


###########################
# Additional Notes
###########################

# - This subset is sufficient to support traceability queries used in STRIDE,
#   such as:
#       Sensor → PerformanceData → Anomaly → Task → Actor
# - Full PROV-O import is unnecessary and would increase complexity.
# - This file serves as a semantic documentation layer; the reasoning is executed
#   in Neo4j property graph form.

################################################################################
# End of File
